@model IEnumerable<OnlineShop.Web.Models.DefaultCellPhoneViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Choose Your Mobile Phone</h1>
</div>



<div class="row">

    @for (int i = 0 ; i < Model.Count() ; i++)
    {

        var cellphone = Model.ElementAt(i);
        <div class="col-md-4">
            <h2>@cellphone.Manufacturer @cellphone.Model</h2>
            <img src="@cellphone.ImageUrl" />
            <p><a class="btn btn-default"href="@Url.Action("Details", "cellphone", new { cellphone.Id})" >@cellphone.Price</a></p>
        </div>
    }

    </div>